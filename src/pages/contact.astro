---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Navbar from '../components/Navbar.astro';
import '../scss/contact.scss';

// Constants
const title = 'Contact';
---

<html lang="en">
<head>
    <MainHead />
</head>
<body>
    <Navbar active="contact" />
    <div class="custom-container">
        <h1>Contact Us</h1>

        <!-- Office Address Section -->
        <section>
            <h2>Office Address</h2>
            <p>
                RM-503, RM-515, <br />
                Computer Science and Engineering Department, <br />
                Indian Institute of Technology Kanpur (IIT Kanpur), <br />
                Kanpur, 208016, Uttar Pradesh, India.
            </p>
        </section>

        <!-- Phone Section -->
        <section>
            <h2>Phone</h2>
            <p>Call us at: <strong>+91-512-259/333/679-2131</strong></p>
        </section>

        <!-- Email Section -->
        <section>
            <h2>Email</h2>
            <p>
                For inquiries, write to us at: 
                <a href="mailto:ashutoshm@cse.iitk.ac.in">ashutoshm@cse.iitk.ac.in</a>
            </p>
        </section>

        <!-- Social Media Section -->
        <section>
            <h2>Connect with Us</h2>
            <div class="social-links">
                <a href="https://twitter.com/example" target="_blank" class="social-item">
                    <img src="/img/icon/x_twitter.png" alt="Twitter">
                    <span>Twitter</span>
                </a>
                <a href="https://linkedin.com/in/example" target="_blank" class="social-item">
                    <img src="/img/icon/Linkedin.png" alt="LinkedIn">
                    <span>LinkedIn</span>
                </a>
                <a href="https://github.com/Exploration-Lab" target="_blank" class="social-item">
                    <img src="/img/icon/github.png" alt="GitHub">
                    <span>GitHub</span>
                </a>
            </div>
        </section>

        <!-- Map Section -->
        <section>
            <h2>Find Us on the Map</h2>
            <p>
                Locate our office easily using this 
                <a href="https://maps.app.goo.gl/eVJkZQ5k9xuumpTB6" target="_blank">Google Maps link</a>.
            </p>
        </section>
    </div>
</body>
</html>
