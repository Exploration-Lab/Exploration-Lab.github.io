---
// imports
import '../scss/global.scss';
import '../scss/about.scss';

import MainHead from '../components/MainHead.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
const title = 'About';
---
<html lang="en">
<head>
    <MainHead />
    <style>
        h1 {
            text-align: center;
            margin-bottom: 1rem;
        }
        .slideshow-container {
            position: relative;
            max-width: 100%;
            margin: 1rem auto;
            /* overflow: hidden; */
        }
        .slide {
            display: none;
            text-align: center;
        }
        .slide img {
            width: 100%;
            height: 400px; /*Set a consistent height*/
            object-fit: scale-down; /* Ensures the image covers the container while maintaining aspect ratio */
        }
        .dots {
            text-align: center;
            margin-top: 10px;
        }
        .dot {
            display: inline-block;
            height: 10px;
            width: 10px;
            margin: 5px;
            background-color: #bbb;
            border-radius: 50%;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .dot.active {
            background-color: #717171;
        }
    </style>
    <script>
        let slideIndex = 0;
        let slideTimeout; // To handle the auto-advance timeout

        // function showSlides() {
        //     let slides = document.getElementsByClassName("slide");
        //     let dots = document.getElementsByClassName("dot");
        //     for (let i = 0; i < slides.length; i++) {
        //         slides[i].style.display = "none";
        //     }
        //     slideIndex++;
        //     if (slideIndex > slides.length) { slideIndex = 1; }
        //     for (let i = 0; i < dots.length; i++) {
        //         dots[i].className = dots[i].className.replace(" active", "");
        //     }
        //     slides[slideIndex - 1].style.display = "block";
        //     dots[slideIndex - 1].className += " active";
        //     slideTimeout = setTimeout(showSlides, 5000); // Change slide every 5 seconds
        // }
        function changeSlide(direction) {
            // Clear the auto-advance timeout to prevent conflicts
            clearTimeout(slideTimeout);
            
            let slides = document.getElementsByClassName("slide");
            let dots = document.getElementsByClassName("dot");
            
            // Hide all slides
            for (let i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            
            // Update slide index
            slideIndex += direction;
            
            // Handle wrapping around
            if (slideIndex > slides.length) { 
                slideIndex = 1; 
            } else if (slideIndex < 1) { 
                slideIndex = slides.length; 
            }
            
            // Remove active class from all dots
            for (let i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", "");
            }
            
            // Show current slide and activate corresponding dot
            slides[slideIndex - 1].style.display = "block";
            dots[slideIndex - 1].className += " active";
            
            // // Restart auto-advance timer
            // slideTimeout = setTimeout(showSlides, 5000);
        }

        function currentSlide(n) {
            // Clear the auto-advance timeout
            clearTimeout(slideTimeout);
            
            let slides = document.getElementsByClassName("slide");
            let dots = document.getElementsByClassName("dot");
            
            // Hide all slides
            for (let i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            
            // Set slide index directly
            slideIndex = n;
            
            // Remove active class from all dots
            for (let i = 0; i < dots.length; i++) {
                dots[i].className = dots[i].className.replace(" active", "");
            }
            
            // Show selected slide and activate corresponding dot
            slides[slideIndex - 1].style.display = "block";
            dots[slideIndex - 1].className += " active";
            
            // // Restart auto-advance timer
            // slideTimeout = setTimeout(showSlides, 5000);
        }
        // document.addEventListener("DOMContentLoaded", showSlides);
        document.querySelector("button.prev").addEventListener("click", () => changeSlide(-1));
        document.querySelector("button.next").addEventListener("click", () => changeSlide(1));
        document.querySelectorAll(".dot").forEach((dot, index) => {
            dot.addEventListener("click", () => currentSlide(index + 1));
        });
    </script>
</head>
<body>
    <Navbar active="about" />
    <div class="custom-container">
        <!-- Slideshow Section -->
        <div class="slideshow-container">
            <!-- Left Arrow Button -->
            <button class="nav-btn prev">&#10094;</button>
            
            <div class="slide">
                <img src="/img/EL-Gallary/EL-project.png" alt="Slide 1">
            </div>
            <div class="slide">
                <img src="/img/EL-Gallary/ACL.jpg" alt="Slide 2">
            </div>
            <div class="slide">
                <img src="/img/EL-Gallary/group-pic.jpg" alt="Slide 3">
            </div>
            <div class="slide">
                <img src="/img/EL-Gallary/diwali.jpg" alt="Slide 4">
            </div>
            <div class="slide">
                <img src="/img/EL-Gallary/diwali2.jpg" alt="Slide 5">
            </div>
            
            <!-- Right Arrow Button -->
            <button class="nav-btn next">&#10095;</button>
        </div>
        <div class="dots">
            <span class="dot" ></span>
            <span class="dot" ></span>
            <span class="dot" ></span>
            <span class="dot" ></span>
            <span class="dot" ></span>
        </div>


        <!-- About Section -->
        <div class="about-section">
            <h1>Exploration Lab</h1>
            <p>
                Welcome to the Exploration Lab at IIT Kanpur! We focus on Natural Language Understanding and are dedicated to developing innovative ways 
                to help machines interpret and process human language more effectively. Our research explores a variety of cutting-edge areas, including:
            </p>
            <ul>
                <li><b>Multimodal Machine Learning:</b> Combining diverse data like text, images, and audio.</li>
                <li><b>Commonsense Reasoning:</b> Teaching machines human-like reasoning skills.</li>
                <li><b>Legal Text Processing:</b> Simplifying and analyzing complex legal documents.</li>
                <li><b>Sign Language Processing:</b> Creating tools for sign language understanding and translation.</li>
                <li><b>Machine Unlearning:</b> Allowing AI to selectively "forget" data while maintaining performance.</li>
                <li><b>Ethics in NLP:</b> Building fair, unbiased, and transparent AI systems.</li>
            </ul>
            <p>
                Our mission is to make AI technology more accessible to everyone and tackle real-world problems in ways that truly benefit society.
            </p>
        </div>
    </div>
    <Footer />
</body>
</html>
