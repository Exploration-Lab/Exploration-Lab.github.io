---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
// Constants
const newsItems = [
    { title: "", date: "" },
    { title: "", date: "" },
    { title: "", date: "" },
    { title: "", date: "" }
];
---
<html lang="en">
<head>
    <MainHead />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .custom-container {
            padding: 2rem;
            max-width: 800px;
            margin: 0 auto;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 1rem;
        }
        .news-card {
            margin-bottom: 1.5rem;
            padding: 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }
        .news-card h3 {
            margin: 0 0 0.5rem;
            color: #2c3e50;
            font-size: 1.2rem;
        }
        .news-card p {
            margin: 0;
            font-size: 0.9rem;
            color: #7f8c8d;
        }
    </style>
</head>
<body>
    <Navbar active="news" />
    <div class="custom-container">
        <h1>News</h1>
        {newsItems.map((item) => (
            <div class="news-card">
                <h3>{item.title}</h3>
                <p>Date: {item.date}</p>
            </div>
        ))}
    </div>
    <Footer />
</body>
</html>
